  box-shadow: 0px 0px 8px rgba(99, 102, 241, 0.7);
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  // Seleccionar el elemento que debe ser animado
  const fadeInElement = document.querySelector(".fade-in");

  // Configurar IntersectionObserver para que active la animaciÃ³n cuando entre en la vista
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        // Cuando el elemento entra en la vista, aÃ±adir las clases necesarias
        entry.target.classList.remove("opacity-0", "translate-y-6");
        entry.target.classList.add("opacity-100", "translate-y-0");
      }
    });
  }, { threshold: 0.3 });

  if (fadeInElement) {
    observer.observe(fadeInElement);
  }
});
</script>
