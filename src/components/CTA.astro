<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.cta-button {
  display: inline-block;
  padding: 12px 30px;
  font-size: 1.125rem;
