---
export interface FAQItem {
  question: string;
  answer: string;
}

const faqItems: FAQItem[] = [
  {
    question: "¿Qué servicios ofrecemos?",
    answer: "Ofrecemos servicios de diseño web, marketing digital e integraciones de inteligencia artificial para empresas y autónomos."
  },
  {
    question: "¿Cómo contacto con soporte?",
    answer: "Puedes contactarnos enviando un correo a soporte@tuempresa.com o llamando al +34 692 38 14 24."
  },
  {
    question: "¿Cuánto tiempo lleva completar un proyecto?",
    answer: "El tiempo varía según el tamaño del proyecto, pero generalmente entregamos en 2-4 semanas."
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-8">Preguntas Frecuentes</h2>
    <div class="space-y-4">
      {faqItems.map((item, index) => (
        <details  class="group border-b border-gray-200 pb-4">
          <summary class="flex justify-between items-center cursor-pointer text-gray-800 font-medium">
            {item.question}
            <span class="transition-transform duration-200 group-open:rotate-180">
              <svg class="w-5 h-5" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </summary>
          <p class="mt-2 text-gray-600">{item.answer}</p>
        </details>
      ))}
    </div>
  </div>
</section>
