---
import Hero from '../components/Hero.astro';
import Timeline from '../components/Timeline.astro';
import Caracteristicas from '../components/Caracteristicas.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/Carousel.astro';
import Logos from '../components/logos.astro';
import Navbar from '../components/Navbar.astro';
---
<meta charset="UTF-8">


  <!-- Metaetiquetas y datos estructurados -->
  <head>
    <title>[Nombre de la Empresa] | Soluciones de Marketing Digital y Diseño Web</title>
    <meta name="description" content="Agencia de marketing digital y diseño web para hacer crecer tu negocio. Ofrecemos soluciones personalizadas para aumentar tu presencia online y tus ventas.">
    <meta name="keywords" content="marketing digital, diseño web, agencia de marketing, desarrollo web, soluciones digitales">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://tu-dominio.com">
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "[Nombre de la Empresa] | Marketing Digital y Diseño Web",
      "description": "Especialistas en marketing digital y diseño web. Impulsamos tu presencia digital con estrategias personalizadas.",
      "url": "https://tu-dominio.com",
      "publisher": {
        "@type": "Organization",
        "name": "[Nombre de la Empresa]",
        "logo": {
          "@type": "ImageObject",
          "url": "https://tu-dominio.com/logo.png"
        }
      }
    }
    </script>
  </head>
  <Layout>
  <!-- Contenido de la página -->
  <main class="bg-white-50">
    <Navbar />
    <section class="py-16 bg-gradient-to-b from-white-100 to-white-200">
      <Hero />
    </section>
    <section>
      <Logos />
    </section>
    <section></section>
    <section class="py-16 bg-white">
      <Carousel />
    </section>
    <section class="py-16 bg-gray-50">
      <Caracteristicas />
    </section>
    <section class="py-16 bg-white">
      <Timeline />
    </section>
    <section class="py-16 bg-gradient-to-b from-white-200 to-white-300">
      <CTA />
    </section>
  </main>
  <footer class="py-8 bg-white-900 text-white">
    <Footer />
  </footer>
</Layout>
